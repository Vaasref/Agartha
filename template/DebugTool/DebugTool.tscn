[sub_resource type="GDScript" id=5]
script/source = "extends Tree


func _ready():
	init_tree()

func _step():
	if visible:
		build_store_tree()

func _restore(_state):
	if visible:
		build_store_tree()

func _on_pressed():
	build_store_tree()


var root:TreeItem
var current_state:TreeItem
var state_stack:TreeItem


func init_tree():
	root = self.create_item()

	current_state = create_item(root)
	current_state.set_text(0, \"Current State\")
	
	state_stack = create_item(root)
	state_stack.set_text(0, \"State Stack\")
	self.set_column_min_width(0, 150)
	self.set_column_min_width(1, 200)
	#self.set_column_expand(0, true)
	#self.set_column_expand(1, true)
	self.hide_root = true


func clear_store_tree():
	var child = current_state.get_children()
	while child:
		child.free()
		child = current_state.get_children()
	
	child = state_stack.get_children()
	while child:
		child.free()
		child = state_stack.get_children()


func build_store_tree():
	clear_store_tree()
	var current_pre_state = create_item(current_state)
	var current_post_state = create_item(current_state)
	current_pre_state.set_text(0, \"pre\")
	current_post_state.set_text(0, \"post\")
	build_state_item(current_pre_state, Agartha.Store.current_state[0])
	build_state_item(current_post_state, Agartha.Store.current_state[1])
	
	var s = Agartha.Store.state_stack
	for i in s.size():
		var state = create_item(state_stack)
		if i == Agartha.Store.current_state_id:
			state.set_text(0, \"%d  (current)\" % i)
		else:
			state.set_text(0, \"%d\" % i)
		state.set_collapsed(true)
		var pre_state = create_item(state)
		var post_state = create_item(state)
		pre_state.set_text(0, \"pre\")
		post_state.set_text(0, \"post\")
		build_state_item(pre_state, s[i][0])
		build_state_item(post_state, s[i][1])


func build_state_item(state_item, state):
	build_recursive_item(state_item, state.properties)
	state_item.set_text(1, \"(State:%s)\" % state.get_instance_id())
	state_item.set_collapsed(true)

func build_recursive_item(parent_item, object):
	if object is Dictionary:
		parent_item.set_text(1, \"{Dictionary}\")
		for k in object.keys():
			var entry_item = create_item(parent_item)
			entry_item.set_text(0, str(k))
			entry_item.set_text(1, str(object[k]))
			entry_item.set_collapsed(true)
			build_recursive_item(entry_item, object[k])
	elif object is Array:
		parent_item.set_text(1, \"[Array]\")
		for i in object.size():
			var entry_item = create_item(parent_item)
			entry_item.set_text(0, str(i))
			entry_item.set_text(1, str(object[i]))
			entry_item.set_collapsed(true)
			build_recursive_item(entry_item, object[i])
	
	
"

[sub_resource type="GDScript" id=6]
script/source = "extends PanelContainer


export var stack_entry_blank:PackedScene

var dialogue:Dialogue
func _ready():
	var _o = Agartha.connect(\"start_dialogue\", self, '_on_start_dialogue')
	_o = Agartha.connect(\"scene_changed\", self, '_on_scene_changed')
	call_deferred(\"get_dialogue\")

func _process(_delta):
	update_dialogue()

func _on_scene_changed(scene_name):
	$VBoxContainer/ExecInfo/SceneName/Value.text = scene_name

func _on_start_dialogue(_dialogue_name, _fragment_name):
	call_deferred(\"get_dialogue\")

func get_dialogue():
	for d in get_tree().get_nodes_in_group(\"dialogues\"):
		if d is Dialogue:
			if d.execution_mode == Dialogue.ExecMode.Regular:
				dialogue = d
				break
	update_dialogue()

func update_dialogue(clear:bool=false):
	if dialogue:
		$VBoxContainer/ExecInfo/DialogueName/Value.text = dialogue.name
		$VBoxContainer/ExecInfo/DefaultFragment/Value.text = dialogue.default_fragment
		$VBoxContainer/ExecInfo/Autorun.pressed = dialogue.autorun
		if clear:
			clear_stack()
			for i in dialogue.execution_stack.size():
				var entry = stack_entry_blank.instance().init(i, dialogue.execution_stack[i])
				$VBoxContainer/EntryList.add_child(entry)
		else:
			while $VBoxContainer/EntryList.get_children().size() < dialogue.execution_stack.size():
				var entry = stack_entry_blank.instance()
				$VBoxContainer/EntryList.add_child(entry)
			while $VBoxContainer/EntryList.get_children().size() > dialogue.execution_stack.size():
				$VBoxContainer/EntryList.remove_child($VBoxContainer/EntryList.get_children()[0])
			for i in dialogue.execution_stack.size():
				if $VBoxContainer/EntryList.get_child(i):
					$VBoxContainer/EntryList.get_child(i).init(i, dialogue.execution_stack[i])


func clear_stack():
	for c in $VBoxContainer/EntryList.get_children():
		$VBoxContainer/EntryList.remove_child(c)
"

